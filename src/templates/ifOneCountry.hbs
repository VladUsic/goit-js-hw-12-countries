<h2 class="countryName">{{name}}</h2>

<div class="card">
    <div class="leftSide">
        <p class="textContent">
            <span class="text">Capital:</span> {{capital}}</p>
        <p class="textContent">
            <span class="text">Population:</span> {{population}}</p>

        <ul>
            <span class="text">Languages:</span>{{#each languages}}
            <li class="textList">{{name}}</li>
            {{/each}}</ul>
    </div>
    <div class="rightSide">
        <img src="{{flag}}" alt="" width="300">
    </div>

</div>